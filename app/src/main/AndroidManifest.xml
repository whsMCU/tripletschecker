<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.checker.tripletschecker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_baby_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_baby_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tripletschecker">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9708062265777742~2194300728" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".DescriptionActivity"></activity>
        <activity android:name=".TripletsActivity"></activity>
        <activity android:name=".QuadrupletsActivity"></activity>

    </application>

</manifest>